apiVersion: apps/v1
kind: Deployment
metadata:
  name: java-anvesh
  labels:
    app: java-anvesh
spec:
  replicas: 3
  selector:
    matchLabels:
      app: java-anvesh
  template:
    metadata:
      labels:
        app: java-anvesh
    spec:
      containers:
      - name: java-anvesh-container
        image: java-anvesh:latest
        ports:
        - containerPort: 8080
        readinessProbe:
          httpGet:
            path: /
            port: 8080
          initialDelaySeconds: 10
          periodSeconds: 5
        livenessProbe:
          httpGet:
            path: /
            port: 8080
          initialDelaySeconds: 30
          periodSeconds: 10

---

apiVersion: v1
kind: Service
metadata:
  name: java-anvesh-service
spec:
  type: NodePort
  selector:
    app: java-anvesh
  ports:
    - protocol: TCP
      port: 8080         # Service port
      targetPort: 8080   # Container port
      nodePort: 30080    # Port exposed on nodes

